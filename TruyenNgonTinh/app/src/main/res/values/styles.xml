<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/action_bar</item>
        <item name="colorPrimary">@color/action_bar</item>
        <item name="android:textColorTertiary">@android:color/white</item>
    </style>

    <style name="MyApp"/>

    <!-- Sliding menu -->
    <style name="MyApp.SlidingMenu" parent="MyApp"/>

    <style name="MyApp.SlidingMenu.Item" parent="MyApp.SlidingMenu">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/action_bar</item>
        <item name="android:paddingLeft">@dimen/sliding_menu_item_padding_left</item>
        <item name="android:height">@dimen/sliding_menu_item_height</item>
    </style>

    <!-- Book row -->
    <style name="MyApp.BookRow" parent="MyApp"/>

    <style name="MyApp.BookRow.Title" parent="MyApp.BookRow">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/action_bar</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyApp.BookRow.Label" parent="MyApp.BookRow">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyApp.BookRow.Content" parent="MyApp.BookRow">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Book Detail -->
    <style name="MyApp.BookDetail" parent="MyApp"/>

    <style name="MyApp.BookDetail.Title" parent="MyApp.BookDetail">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/action_bar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyApp.BookDetail.Description" parent="MyApp.BookDetail">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyApp.BookDetail.RowChap" parent="MyApp.BookDetail">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/row_chap_padding_left</item>
        <item name="android:paddingTop">@dimen/row_chap_padding_top</item>
        <item name="android:paddingBottom">@dimen/row_chap_padding_bottom</item>
        <item name="android:paddingRight">@dimen/row_chap_padding_right</item>
    </style>

    <style name="MyApp.BookDetail.CurrentChap" parent="MyApp.BookDetail">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/action_bar</item>
        <item name="android:background">@drawable/row_chap_bg</item>
        <item name="android:paddingLeft">@dimen/row_chap_padding_left</item>
        <item name="android:paddingTop">@dimen/row_chap_padding_top</item>
        <item name="android:paddingBottom">@dimen/row_chap_padding_bottom</item>
        <item name="android:paddingRight">@dimen/row_chap_padding_right</item>
    </style>

    <!-- Dialog -->
    <style name="MyApp.Dialog"/>

    <style name="MyApp.Dialog.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/dialog_padding_top</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_bottom</item>
    </style>

    <style name="MyApp.Dialog.Message">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/dialog_padding_left</item>
        <item name="android:paddingRight">@dimen/dialog_padding_right</item>
        <item name="android:paddingTop">@dimen/dialog_padding_top</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_bottom</item>
    </style>

    <style name="MyApp.Dialog.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dialog_error_button_height</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>

    <style name="MyApp.Dialog.Button.LeftRightCorner" parent="MyApp.Dialog.Button">
        <item name="android:background">@drawable/bg_dialog_corner_left_right_button</item>
    </style>

    <style name="MyApp.Dialog.Button.LeftCorner" parent="MyApp.Dialog.Button">
        <item name="android:background">@drawable/bg_dialog_corner_left_button</item>
    </style>

    <style name="MyApp.Dialog.Button.RightCorner" parent="MyApp.Dialog.Button">
        <item name="android:background">@drawable/bg_dialog_corner_right_button</item>
    </style>

    <style name="MyApp.Dialog.Button.NoCorner" parent="MyApp.Dialog.Button">
        <item name="android:background">@drawable/bg_dialog_no_corner_button</item>
    </style>

</resources>
